<!-- app/views/clients/show.html.erb -->
<h1><%= @client.name %> Bookings</h1>

<ul>
  <% @client.bookings.each do |booking| %>
    <li>
      <%= link_to booking.room.name, booking.room %>
      <%= booking.check_in_date %> to <%= booking.check_out_date %>
      <%= link_to "Cancel", booking, method: :delete, data: { confirm: "Are you sure you want to cancel this booking?" } %>
    </li>
  <% end %>
</ul>
