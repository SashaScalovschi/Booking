<!DOCTYPE html>
<html>
<head>
  <title>The Booking Oasis</title>
  <%= stylesheet_link_tag 'stile/styles', media: 'all' %>
</head>
<body>

<header>
  The Booking Oasis
</header>

<main>
  <h1>New Client</h1>

  <%= form_with(model: @client, url: clients_path, local: true) do |form| %>
    <div class="form-field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="form-field">
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>

    <div class="form-actions">
      <%= form.submit 'Create Client', class: 'button' %>
    </div>
  <% end %>
</main>

<footer>
  Created by "Team 5"
</footer>

</body>
</html>
